@model Fjordens_Service_ver2.ViewModels.HomeViewModel

<div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" id="eventTitle" />
</div>
<div class="form-group">
    <label>Dato</label>
    <input class="form-control" type="text" id="eventDate" />
</div>
<div class="form-group">
    <label>Start tid</label>
    <input class="form-control" type="text" id="eventStartTime" />
</div>
<div class="form-group">
    <label>Slut tid</label>
    <input class="form-control" type="text" id="eventEndTime" />
</div>
<div class="form-group">
    <label>Virksomhed</label>
    @Html.DropDownList("CustomersList", new SelectList(@Model.Customers, "CustomerId", "Company"), new { @id = "customersList", @class="form-control" })
</div>
<div class="form-group">
    <label>Medarbejder</label><br />
    @Html.DropDownList("EmployeeList", new SelectList(@Model.Employees, "EmployeeId", "Name"), new { @id = "employeesList", @class = "form-control" })
</div>
<div class="form-group">
    <label>Note</label>
    <textarea class="form-control" id="eventNote"></textarea>
</div>
